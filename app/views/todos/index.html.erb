<div class="body">
  <div class="section-content border-2 border-green-500 h-96 text-center">
    <h1 class="text-2xl border-2 border-red-500 m-5">
      To-Do List
    </h1>
    <div class="todo-items border-2 border-purple-500 m-5">
      <% @todos.each do |todo_item| %>
        <%= todo_item.name %>
        <%= todo_item.description %>
      <% end %>
    </div>
  </div>
</div>
